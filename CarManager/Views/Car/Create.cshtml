            @Html.DropDownList("C_fk_CarColour", null, "--Select Colour--", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.C_fk_CarColour, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CarEngine, htmlAttributes: new { @class = "control-label col-md-2" })
