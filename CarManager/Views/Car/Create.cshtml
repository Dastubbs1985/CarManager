            @Html.EditorFor(model => model.CarEngine, new { htmlAttributes = new { @class = "form-control", placeholder = "--Input Engine Size--" } })
            @Html.ValidationMessageFor(model => model.CarEngine, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

