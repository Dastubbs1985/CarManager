        </div>
    </div>

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.C_fk_CarModel, "Model", htmlAttributes: new { @class = "control-label col-md-2" })
