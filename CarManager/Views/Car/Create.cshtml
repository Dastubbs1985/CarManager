@model CarManager.Models.Car

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Car</h4>
    <hr />

    <div class="form-group">
        @Html.LabelFor(model => model.C_fk_CarMake, "Make", htmlAttributes: new { @class = "control-label col-md-2" })
